{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "jsx": "react",
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~src/*":  ["src/*"],
      "~utils/*": ["src/utils/*"],
      "~stores/*": ["src/stores/*"],
      "~helpers/*": ["src/helpers/*"],
      "~types/*": ["src/@types/*"] 
    },
    "typeRoots": [
      "./node_modules/@types",
    ],
  },
  "include": ["src"]
}